<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chord_Charts">

    <Button
        android:id="@+id/cButton"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="8dp"
        android:text="C"
        app:layout_constraintEnd_toStartOf="@+id/fButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="120dp"
        android:text="Learn the Basic Chords"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_chord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="528dp"
        android:text="Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/chord"
        android:layout_width="170dp"
        android:layout_height="176dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="?attr/listChoiceBackgroundIndicator" />

    <Button
        android:id="@+id/eButton"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="508dp"
        android:text="E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aButton"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="508dp"
        android:text="A"
        app:layout_constraintStart_toEndOf="@+id/eButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dButton"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="508dp"
        android:text="D"
        app:layout_constraintStart_toEndOf="@+id/aButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gButton"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="8dp"
        android:text="G"
        app:layout_constraintEnd_toStartOf="@+id/cButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fButton"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="16dp"
        android:text="F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>